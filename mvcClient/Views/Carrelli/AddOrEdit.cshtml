@model  mvcClient.Models.CarrelloModel
@{
    ViewBag.Title = "Creaziono O Aggiornamento Carrello";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.CarrelloID)

        <div class="form-group">
            @Html.LabelFor(model => model.Matricola)
            @Html.EditorFor(model => model.Matricola)
            @Html.ValidationMessageFor(model => model.Matricola)
        </div>

        <div class="form-group">
            @Html.Label("Anno Arrivo")
            @Html.EditorFor(model => model.AnnoArrivo)
            @Html.ValidationMessageFor(model => model.AnnoArrivo)
        </div>
        <div class="form-group">
            @Html.Label("Area Stock")
            @Html.EditorFor(model => model.AreaStock)
            @Html.ValidationMessageFor(model => model.AreaStock)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Locazione)
            @Html.EditorFor(model => model.Locazione)
            @Html.ValidationMessageFor(model => model.Locazione)
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn button" />
            <input type="reset" value="Reset" class="btn button" />
        </div>
    }
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}