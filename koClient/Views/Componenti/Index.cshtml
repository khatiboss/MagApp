@{
    /**/

    ViewBag.Title = "Home Page";
}

<br />

<p>

    <button class="btn btn-success" data-bind="visible:shouldShowButton,click:creatNewComponente" data-target="#newComponente" data-toggle="modal"><i class="fa fa-plus"></i> Nuovo Componente</button>

</p>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>
            <th>Codice</th>
            <th>Descrizione</th>
            <th>Note</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody data-bind="foreach:componenti">
        <tr>
            <td>
                <span data-bind="text:$data.codice"></span>
            </td>
            <td>
                <span data-bind="text:$data.descrizione"></span>
            </td>
            <td>
                <span data-bind="text:$data.note"></span>
            </td>
            <td>
                <button class="btn btn-default" data-bind="click:$parent.show, visible:$parent.shouldShowButton" title="Show"><i class="fa fa-eye"></i></button>
                <button class="btn btn-primary" data-bind="click:$parent.loadExistingComponente,visible:$parent.shouldShowButton" data-target="#existingComponente" data-toggle="modal" title="Modifica"><i class="fa fa-pencil"></i> </button>
                <button class="btn btn-danger" data-bind="click:$parent.remove, visible:$parent.shouldShowButton" title="Cancella"><i class="fa fa-trash"></i> </button>
            </td>
        </tr>
    </tbody>
</table>

<div class="modal" id="newComponente" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <div class="modal-title">
                    <strong class="text-success">Nuovo Componente</strong>
                </div>
            </div>
            <div class="modal-body" data-bind="with:newcomponente">
                <div>
                    <div class="form-group col-md-offset-2">
                        <input placeholder="Codice" type="text" name="codice" data-bind="value:codice" class="form-control" required />
                        <span class="validation-summary-errors" data-bind="text:$parent.modelState().codiceErrors"></span>

                    </div>


                    <div class="form-group col-md-offset-2">
                        <input placeholder="Descrizione" type="text" name="descrizione" data-bind="value:descrizione" class="form-control" required />
                        <span class="validation-summary-errors" data-bind="text:$parent.modelState().descrizioneErrors"></span>
                    </div>
                    <div class="form-group col-md-offset-2">
                        <textarea rows="5" placeholder="Note" data-bind="value:note" class="form-control" required />
                        <span class="validation-summary-errors" data-bind="text:$parent.modelState().noteErrors"></span>

                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default " data-dismiss="modal">Chiude</button>
                <button class="btn btn-success" data-bind="click:save">Salva</button>
            </div>
        </div>
    </div>
</div>




<div class="modal" id="existingComponente" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <div class="modal-title">
                    <strong class="text-primary">Aggiornamento Componente</strong>
                </div>
            </div>
            <div class="modal-body" data-bind="with:newcomponente">
                <div class="form-group row">
                    <div class="col-sm-3">
                        Codice
                    </div>
                    <div class="col-sm-9">
                        <input placeholder="Codice" type="text" name="codice" data-bind="value:codice" class="form-control" required />
                        <span class="validation-summary-errors" data-bind="text:$parent.modelState().codiceErrors"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">Descrizione</div>
                    <div class="col-md-9">
                        <input placeholder="Descrizione" type="text" name="descrizione" data-bind="value:descrizione" class="form-control" required />
                        <span class="validation-summary-errors" data-bind="text:$parent.modelState().descrizioneErrors"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">Note</div>
                    <div class="col-sm-9">
                        <textarea rows="5" placeholder="Note" data-bind="value:note" class="form-control" />
                        <span class="validation-summary-errors" data-bind="text:$parent.modelState().noteErrors"></span>
                    </div>
                </div>
                
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Chiude</button>
                <button class="btn btn-primary" data-bind="click:update">Aggiorna</button>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/App/ViewModels/componenteViewModel.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/knockout-3.4.2.js"></script>

<script>
    $(document).ready(function () {
        var model = new componenteViewModel();
        model.init();
        ko.applyBindings(model);
    });
</script>
